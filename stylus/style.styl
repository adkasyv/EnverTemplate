@import 'fonts.styl'

////////////////////////////////////////
// Resetting styles
////////////////////////////////////////
body 
  background-color #1D1B1D
  min-height: 100vh
  text-rendering optimizeSpeed
  line-height 1.5
  position relative
  width 100%
  height 100%
    
*,
*:before,
*:after 
    box-sizing border-box

body,
h1,
h2,
h3,
h4,
p,
ul[class],
ol[class],
li,
figure,
figcaption,
blockquote,
dl,
dd 
    margin 0

/* Remove standard styling for all ul and ol that have a class attribute    */
/* Удалить стандартный стиль для всех ul и ol, у которых есть атрибут class */
ul[class],
ol[class],
li
    list-style none

ul[class],
ol[class] 
    padding 0

/* Elements a, which do not have a class, are reset to default styles    */
/* Элементы a, у которых нет класса, сбрасываются до стилей по умолчанию */
a:not([class])
    text-decoration-skip-ink auto

/* Making it easier to work with images */
/* Упрощение работы с изображениями     */
img 
    max-width 100%
    display block

/* Inheriting fonts for inputs and buttons  */
/* Наследование шрифтов для входов и кнопок */
input,
button,
textarea,
select 
    font inherit


////////////////////////////////////////
// Variables
////////////////////////////////////////
color-main         = #1D1B1D
color-second       = #000000
 
text-color         = #ffffff
text-color--second = #000000
 
font-size          = 1em
font-size--h1      = 2.5em

font-size--small   = 0.875em
 
line-height        = 1.375em
 
font-family        = 'Roboto', Arial, sans-serif
 
screen-xs          = "only screen and (max-width: 320px)"
screen-sm          = "only screen and (max-width: 480px)"
screen-md          = "only screen and (max-width: 768px)"
screen-lg          = "only screen and (max-width: 992px)"
screen-xl          = "only screen and (min-width: 1200px)"


////////////////////////////////////////
// Text
////////////////////////////////////////
h1,
h2,
h3,
h4,
  font-family 'Gilroy Bold'
  color color-main
h1
  font-family 'Gilroy Bold'
  font-size font-size--h1
p
  font-family 'Gilroy Regular'
  color text-color
  font-size font-size--small
a   
  color text-color
  text-decoration none

////////////////////////////////////////
// Structure
////////////////////////////////////////
.bg_gradient
  position absolute
  z-index -1
  width 100%
  height 100%

.section 
  margin 10em 0
.container 
  width 100%
  max-width 1170px
  padding 0 15px
  margin 0 auto
  overflow hidden

button
  color #ffffff




// ! ============================
// ! navbar 
// ! ============================
.burger-menu
  // display grid
  // place-items center
  position absolute
  width 98%
  background-color #2c2c33
  z-index 1px
  top 1%
  right 1%
  left 1%
  border-radius 10px
  border 2px solid white
  display none
  .burger-menu__content
    display grid
    place-items center

    width 100px
    height min-content
    // height 100px
    .burger-menu__btn_close
      margin 4% 0
      width 50px
      height 50px
      cursor pointer
    .burger-menu__input
      width 30%
      height 10%
      background-color transparent
      border-radius 5px
      border 1px solid white
    .burger-menu__list
      display flex
      flex-direction column
      list-style-type none
      justify-content space-between
      align-items center
      width 60%
      padding 0
      .burger-menu__item>a
        text-decoration none
        color white
        transition .8s
        &:hover
          color #5454d4



// ! ============================
// ! navbar 
// ! ============================
// ? вопрос с navbar__inner + вложенность
.header 
  margin-top 2em
.nav
  display grid
  grid-template-columns repeat(3, auto)
  justify-content space-between
  align-items center
  @media screen-md
    grid-template-columns repeat(2, auto)
    justify-content: space-around

  &__list
    display grid
    grid-template-columns repeat(4, auto)
    gap 2em
    @media screen-md
      display none
    .list__item 
      &:hover
        background-color #5454D4
        transition .3s
  &__input
    width 180px
    height 30px
    border 2px solid white  
    border-radius 7px
    background-color inherit
    @media screen-md
      display none


.navbar__btn_burger
  display none
  @media screen-md
    display block


// ! ============================
// ! about
// ! ============================
.about 
  &__inner
    display grid
    grid-template-columns repeat(auto-fit, minmax(27em, 1fr))
    gap 5em
    @media screen-lg
      place-items center
    @media screen-sm
      grid-template-columns repeat(auto-fit, minmax(12em, 1fr))
  .about__text
    display grid
    gap 1em
    @media screen-lg
      width 90%
      gap 3em
    .about__btn
      background-color #5454d4
      width 200px
      height 50px
    .about__title 
      font-size 6em
      line-height 1.1em
      color text-color
      @media screen-sm
        font-size 4em
    .about__description
      font-size 1.5em 
      @media screen-sm
        font-size 1em


// ! ============================
// ! services
// ! ============================
.services 
  display grid
  gap 3em
  &__title_main
    text-align center
    color white

    font-size 4em
    font-weight 700
    font-family 'Gilroy Bold'
  &__list
    display grid
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    place-items center
    gap 3em
    @media screen-md
      gap 5em
    .services__item
      display grid
      justify-items center
      gap 1em
      width 85%
      .services__title
        color white
        font-family 'Gilroy Bold'

        font-size 1.5em
      .services__desc
        width 70%
        font-size 1em




// ! ============================
// ! portfolio
// ! ============================
.portfolio
  &__title
    color white
    font-size 3em
  &__list
    display grid
    gap 2em
    .portfolio__item
      display grid  
      &:nth-child(1)
        justify-items start
      &:nth-child(2)
        justify-items center
      &:nth-child(3)
        justify-items end

  &__slide
    display grid
    place-items center


// ! ============================
// ! footer
// ! ============================
.footer 
  display grid
  margin-bottom 2em
  gap 3em
  @media screen-sm
    gap 5em
  &__contact
    display grid
    grid-template-columns repeat(auto-fit, minmax(20em, 1fr))
    place-items center
    gap 2em
    .footer__contact_title
      font-size 3em
      color white
      font-family 'Gilroy Bold'
    .footer__contact_btn
      width 10em
      height 3em
      background-color #5454D4
      border-radius 0.5em
  
  @extend .header

